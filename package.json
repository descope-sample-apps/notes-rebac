  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "3.0.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
